{
  "name": "maintenance-tracker-app",
  "version": "1.0.0",
  "description": "An application to create and track maintenance and repair requests",
  "main": "./server/index.js",
  "scripts": {
    "start": "nodemon ./server/index.js --exec babel-node",
    "build": "babel server -d dist",
    "serve": "node dist/index.js",
    "test": "nyc --reporter=html --reporter=text mocha --require babel-register ./server/test --recursive --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "exclude": [
      "UI",
      "server/test",
      "server/controllers",
      "server/helpers"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madeofhuman/Maintenance-Tracker-App.git"
  },
  "keywords": [
    "maintenance",
    "repair"
  ],
  "author": "CJ Odina",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/madeofhuman/Maintenance-Tracker-App/issues"
  },
  "homepage": "https://github.com/madeofhuman/Maintenance-Tracker-App#readme",
  "devDependencies": {
    "coffeescript": "^2.3.0",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.8.0"
  },
  "dependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "nodemon": "^1.17.4"
  }
}
